@model IEnumerable<Travel_Request_System_EF.Models.RFQ>

@{
    ViewBag.Title = "RFQMerger";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <aside class="right-side">
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">RFQ Merge Table</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <table class="table table-condensed table-bordered">
                                @if (Model == null || (Model.Count() == 0))
                                {
                                    <tr>
                                        <td colspan="10">No Record's found.</td>
                                    </tr>
                                }
                                else
                                {
                                    <tr class="success">
                                        <th>RFQ#</th>
                                        <th>Merged Sections</th>
                                        <th>Select Travel Agency</th>
                                        <th>Attachments</th>
                                        <th>Action</th>
                                        <th>
                                        </th>
                                    </tr>
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td>
                                                <div class="form-group">
                                                    @{
                                                        var ta = ((IEnumerable<Travel_Request_System_EF.Models.TravelAgency>)ViewBag.TravelAgencies).FirstOrDefault(rt => rt.ID == item.TravelAgencyID).CompanyName.ToString();
                                                    }
                                                    @ta
                                                </div>
                                            </td>
                                            <td>
                                                <div class="form-group">
                                                    <label for="AttachmentsFile">Files</label>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="glyphicon">
                                                    @Html.ActionLink("  Email as PDF", "Email", new { id = item.TravelRequestID }, new { @class = "form-control btn btn-info  glyphicon-envelope" })
                                                </span>
                                            </td>
                                            <td>
                                                <div class="radio">
                                                    <label>
                                                        <input type="radio">
                                                    </label>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div>
        </section>
    </aside>
</div>
