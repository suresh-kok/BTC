@model List<Travel_Request_System_EF.Models.LPO>
@using ReportViewerForMvc;

@{
    ViewBag.Title = "LPO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<aside class="right-side">
  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-header">
            <h3 class="box-title">Travel Grid</h3>
          </div><!-- /.box-header -->
          <div class="box-body">
            <table class="table table-condensed table-bordered" id="travelGridTable">
              <thead>
                <tr class="success">
                  <th>LPO #</th>
                  <th>Details</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                @foreach (var item in Model)
                                {
                <tr>
                  <td>
                    LPO-@item.ID - @item.Quotation.TravelRequests.ExpensesHandledBy / @item.Quotation.TravelRequests.ApplicationNumber
                  </td>
                  <td>
                    @item.Quotation.TravelRequests.ApplicationNumber
                    <br />
                    <br />
                    @if (item.IsAT != null && (bool)item.IsAT)
                                            {
                    @(new HtmlString("Q# AT-Q"));
                    <br />
                                            }
                    @if (item.IsHS != null && (bool)item.IsHS)
                                            {
                    @(new HtmlString("Q# HS-Q"));
                    <br />
                                            }
                    @if (item.IsPC != null && (bool)item.IsPC)
                                            {
                    @(new HtmlString("Q# PC-Q"));
                    <br />
                                            }
                  </td>
                  <td>
                    <span class="glyphicon">
                      @Html.ActionLink("  View Details", "LPODetails", new { id = item.ID }, new { @class = "form-control btn btn-info  glyphicon-envelope" })
                    </span>
                  </td>
                </tr>
                                }
              </tbody>
            </table>
          </div><!-- /.box-body -->
        </div><!-- /.box -->
      </div>
    </div>
  </section>
</aside>