@model List<Travel_Request_System_EF.Models.LPO>

@{
    ViewBag.Title = "LPO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<aside class="right-side">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Travel Grid</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-condensed table-bordered" id="travelGridTable">
                            <thead>
                                <tr class="success">
                                    <th>LPO #</th>
                                    <th>Details</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            LPO-@item.ID / @item.Quotation.TravelRequests.ApplicationNumber
                                        </td>
                                        <td>
                                            @item.Quotation.TravelRequests.ApplicationNumber
                                            AT @item.Quotation.ATQuotation.FirstOrDefault().ID
                                            HS @item.Quotation.HSQuotation.FirstOrDefault().ID
                                            PC @item.Quotation.PCQuotation.FirstOrDefault().ID
                                        </td>
                                        <td><a class="form-control btn btn-info glyphicon glyphicon-info-sign">  Details</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section>
</aside>

