                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-3">Airport Pickup</label>
                                        <div class="col-sm-9">
                                            @{
                                                var ap = Model.TravelRequest.AirportPickUp;

                                                string apVal;
                                                if (Convert.ToInt32(ap) == 0)
                                                {
                                                    apVal = "Yes";
                                                }
                                                else
                                                {
                                                    apVal = "No";
                                                }
                                            }
                                            <label id="airportpic">@apVal</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="margin-bottom:15px">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-3">Additional Expenses</label>
                                        <div class="col-sm-9">
                                            @Html.DisplayFor(model => model.TravelRequest.AdditionalAllowance, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0", @step = "10.00", @Value = "0.00" } })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="PickUpDetailsDiv" class="col-xs-12 col-md-12" style="display:none">
                    <div class="box box-default">
                        <div class="box-header with-border">
                            <h3 class="box-title">Pick Up Details</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            </div>
                        </div>
                        <div class="box-body">
                            <div style="margin-bottom:15px">
                            </div>
                            <div class="row" style="margin-bottom:15px">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-3">Pick Up Location</label>
                                        <div class="col-sm-9">
                                            <div class="form-group">
                                                @Html.DisplayFor(model => model.TravelRequest.PickUpLocation, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                </div>
                            </div>
                            <div class="row" style="margin-bottom:15px">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-3">Pick Up Date</label>
                                        <div class="col-sm-9">
                                            <div class="form-group">
                                                @if (Model.TravelRequest.PickUpDate != null)
                                                {
                                                    string.Format("{0:dd MMM yyyy}", Convert.ToDateTime(Html.DisplayFor(model => model.TravelRequest.PickUpDate).ToString()));
                                                }

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-3">Pick Up Time</label>
                                        <div class="col-sm-9">
                                            @if (Model.TravelRequest.PickUpTime != null)
                                            {
                                                string.Format("{0:hh:mm tt}", Convert.ToDateTime(Html.DisplayFor(model => model.TravelRequest.PickUpTime).ToString()));
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="margin-bottom:15px">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-3">Drop Off Location</label>
                                        <div class="col-sm-9">
                                            <div class="form-group">
                                                @Html.DisplayFor(model => model.TravelRequest.DropOffLocation, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                </div>
                            </div>
                            <div class="row" style="margin-bottom:15px">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-3">Drop Off Date</label>
                                        <div class="col-sm-9">
                                            <dAiv class="form-group">
                                                @if (Model.TravelRequest.DropOffDate != null)
                                                {
                                                    string.Format("{0:dd MMM yyyy}", Convert.ToDateTime(Html.DisplayFor(model => model.TravelRequest.DropOffDate).ToString()));
                                                }
                                            </dAiv>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-3">Drop Off Time</label>
                                        <div class="col-sm-9">
                                            @if (Model.TravelRequest.DropOffTime != null)
                                            {
                                                string.Format("{0:hh:mm tt}", Convert.ToDateTime(Html.DisplayFor(model => model.TravelRequest.DropOffTime).ToString()));
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="margin-bottom:15px">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-3">Preferred Vehicle Type</label>
                                        <div class="col-sm-9">
                                            @Html.DisplayFor(model => model.TravelRequest.PreferredVehicle, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 col-md-12">
                    <div class="box box-default">
                        <div class="box-header with-border">
                            <h3 class="box-title">Remarks</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="row" style="margin-bottom:15px">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            @Html.TextAreaFor(model => model.TravelRequest.Remarks, htmlAttributes: new { @class = "form-control", @rows = "4", @placeholder = "Enter Travel Request Remarks..." })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script type="text/javascript">
        if ($('#airportpic').text() == "Yes") {
            $('#PickUpDetailsDiv').show()
        }
        else {
            $('#PickUpDetailsDiv').hide()
        }

        $('#detailsDiv').find('textarea').attr('disabled', 'disabled');

    </script>
}