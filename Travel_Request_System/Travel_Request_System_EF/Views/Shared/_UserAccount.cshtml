@* BEGIN User Account Menu *@

<li class="dropdown user user-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <img src="~/Content/img/guest.jpg" class="user-image" alt="User Image">
        <span class="hidden-xs">@(ViewBag.UserDetails.FirstName + " " + ViewBag.UserDetails.LastName)</span>
    </a>
    <ul class="dropdown-menu">
        <li class="user-header">
            <img src="~/Content/img/guest.jpg" class="img-circle" alt="User Image">
            <p>
                @(ViewBag.UserDetails.FirstName  + " " + ViewBag.UserDetails.LastName)
                <small>@ViewBag.RoleDetails</small>
            </p>
        </li>
        <li class="user-body">
            <div class="row">
                <div class="col-xs-4 text-center">
                    <a href="#">Total Travel Requests: @(ViewBag.UserDetails.TravelRequests1.Count)</a>
                </div>
                <div class="col-xs-4 text-center">
                    <a href="#">Total Submitted Requests: @((ViewBag.UserDetails.TravelRequests1 as ICollection<Travel_Request_System_EF.Models.TravelRequests>).Where(a => a.IsSubmitted == true).Count())</a>
                </div>
                <div class="col-xs-4 text-center">
                    <a href="#">Total Un-Submitted Requests: @((ViewBag.UserDetails.TravelRequests1 as ICollection<Travel_Request_System_EF.Models.TravelRequests>).Where(a => a.IsSubmitted == false).Count())</a>
                </div>
            </div>
        </li>
        <li class="user-footer">
            <div class="pull-left">
                <a href="@Url.Action("EmployeeDetails", "BTC")" class="btn btn-default btn-flat">Profile</a>
            </div>
            <div class="pull-right">
                <a href="@Url.Action("Index", "Account")" class="btn btn-default btn-flat">Sign out</a>
            </div>
        </li>
    </ul>
</li>
@* END User Account Menu *@
@* BEGIN Control Sidebar Toggle Button *@
<li>
    <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
</li>
@* END Control Sidebar Toggle Button *@
