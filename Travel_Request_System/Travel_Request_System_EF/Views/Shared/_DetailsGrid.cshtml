<aside class="right-side">

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Details</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive">
                        <table id="detailsGrid1" class="table table-bordered table-hover table-responsive">
                            @if (ViewBag.NotificationsList == null || (ViewBag.NotificationsList != null && ViewBag.NotificationsList.Count == 0))
                            {
                                <tr>
                                    <td colspan="10">No Record's found.</td>
                                </tr>
                            }
                            else
                            {
                                <thead>
                                    <tr class="danger">
                                        <th data-defaultsign="_19"> Employee ID</th>
                                        <th data-defaultsign="AZ">Name</th>
                                        <th data-defaultsign="AZ">Title</th>
                                        <th data-defaultsign="month">Birth Date</th>
                                        <th data-firstsort="desc">Address</th>
                                        <th data-defaultsign="AZ">City</th>
                                        <th data-defaultsort="disabled">Country</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.NotificationsList != null)
                                    {
                                        foreach (var item in ViewBag.NotificationsList)
                                        {
                                            <tr>
                                                <td>@item.EmployeeID</td>
                                                <td>@item.Name</td>
                                                <td>@item.Title</td>
                                                <td>@item.BirthDate</td>
                                                <td>@item.Address</td>
                                                <td>@item.City</td>
                                                <td>@item.Country</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            }
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section>
</aside>
