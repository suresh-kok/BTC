@model List<Travel_Request_System_EF.Models.TravelRequests>

@{
    ViewBag.Title = "Employee Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<aside class="right-side">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Details</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive">
                        <table id="detailsGrid1" class="table table-bordered table-hover table-responsive">
                            @if (Model == null || (Model != null && Model.Count == 0))
                            {
                                <tr>
                                    <td colspan="10">No Record's found.</td>
                                </tr>
                            }
                            else
                            {
                                <thead>
                                    <tr class="info">
                                        <th>Application Number</th>
                                        <th>Destination</th>
                                        <th>Travel Days</th>
                                        <th>Departure Date</th>
                                        <th>Return Date</th>
                                        <th>Air Ticket Management</th>
                                        <th>Airport PickUp</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.ApplicationNumber</td>
                                                <td>@item.PortOfDestinationID</td>
                                                <td>@item.TravelDays</td>
                                                <td>@item.DepartureDate</td>
                                                <td>@item.ReturnDate</td>
                                                <td>@item.AirTicketManagement</td>
                                                <td>@item.AirportPickUp</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            }
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section>
</aside>
