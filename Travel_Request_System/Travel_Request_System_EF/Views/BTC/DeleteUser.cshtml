@model Travel_Request_System_EF.Models.Users

@{
    ViewBag.Title = "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Are you sure you want to delete this?</h3>
<aside class="right-side">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Details</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive">
                        <table id="detailsGrid1" class="table table-bordered table-hover table-responsive">
                            @if (Model == null || (Model.ID == 0))
                            {
                                <tr>
                                    <td colspan="10">No Record's found.</td>
                                </tr>
                            }
                            else
                            {
                                <thead>
                                    <tr class="danger">
                                        <th>
                                            <label>Role</label>
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Username)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.LastName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Email)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IsActive)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            @ViewBag.RoleName
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Username)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.FirstName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.LastName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.IsActive)
                                        </td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</aside>

@using (Html.BeginForm( "DeleteUsers","BTC",new { id=Model.ID},FormMethod.Post ))
{
    @Html.AntiForgeryToken()

    <div class="row" style="margin-bottom:15px">
        <div class="col-md-6">
            <div class="form-group">
                <div class="col-md-3">
                    <input type="submit" value="Delete" class="form-control btn btn-info" data-toggle="confirmation" />
                </div>
                <div class="col-md-3">
                    @Html.ActionLink("Back to List", "ManageUsers", null, new { @class = "form-control btn btn-info" })
                </div>
            </div>
        </div>
    </div>
}


