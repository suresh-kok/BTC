
@{
    ViewBag.Title = "HR Approval";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.Partial("_TravelRequestDetails");

<div class="row" style="margin-bottom:15px">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            <input type="submit" class="form-control btn btn-info" value="Approve" />
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            <input type="button" class="form-control btn btn-info" value="Reject" />
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            <input type="button" class="form-control btn btn-info" value="Override & Approve" />
        </div>
    </div>
    <div class="col-sm-1">
    </div>
</div>
}

@section Scripts {
    <script>
        $(function () {
            $('#detailsGrid1').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': true
            })
        })

        $(function () {
            //Initialize Select2 Elements
            $('.select2').select2()
        })

        $('.timepicker').timepicker({
            showInputs: false
        })
    </script>
}