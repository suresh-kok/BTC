
@{
    ViewBag.Title = "Delete Travel Agency";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Travel_Request_System_EF.Models.TravelAgency

<h3>Are you sure you want to delete this?</h3>
<aside class="right-side">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Details</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive">
                        <table id="detailsGrid1" class="table table-bordered table-hover table-responsive">
                            @if (Model == null || (Model.ID == 0))
                            {
                                <tr>
                                    <td colspan="10">No Record's found.</td>
                                </tr>
                            }
                            else
                            {
                                <thead>
                                    <tr class="danger">
                                        <th data-defaultsign="_19">
                                            @Html.DisplayNameFor(model => model.AgencyCode)
                                        </th>
                                        <th data-defaultsign="AZ">
                                            @Html.DisplayNameFor(model => model.CompanyName)
                                        </th>
                                        <th data-defaultsign="AZ">
                                            @Html.DisplayNameFor(model => model.Address)
                                        </th>
                                        <th data-defaultsign="month">
                                            @Html.DisplayNameFor(model => model.Telephone)
                                        </th>
                                        <th data-firstsort="desc">
                                            @Html.DisplayNameFor(model => model.Fax)
                                        </th>
                                        <th data-defaultsign="AZ">
                                            @Html.DisplayNameFor(model => model.Mobile)
                                        </th>
                                        <th data-defaultsort="disabled">
                                            @Html.DisplayNameFor(model => model.Landline)
                                        </th>
                                        <th data-defaultsort="disabled">
                                            @Html.DisplayNameFor(model => model.ContactPerson)
                                        </th>
                                        <th data-defaultsort="disabled">
                                            @Html.DisplayNameFor(model => model.Email)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => model.AgencyCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.CompanyName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Address)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Telephone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Fax)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Mobile)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Landline)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.ContactPerson)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Email)
                                        </td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</aside>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row" style="margin-bottom:15px">
        <div class="col-md-6">
            <div class="form-group">
                <div class="col-md-3">
                    <input type="submit" value="Delete" class="form-control btn btn-info" />
                </div>
                <div class="col-md-3">
                    @Html.ActionLink("Back to List", "ManageTravelAgency", null, new { @class = "form-control btn btn-info" })
                </div>
            </div>
        </div>
    </div>
}


