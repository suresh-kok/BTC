
@{
    ViewBag.Title = "Delete Travel Agency";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Travel_Request_System_EF.Models.TravelAgency

<h3>Are you sure you want to delete this?</h3>
<div class="col-xs-12 col-sm-12">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Travel Agency Information</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <div class="box-body">
            <div>
                @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                <div class="row" style="margin-bottom:15px">
                    <div class="form-group">
                        @Html.LabelFor(model => model.AgencyCode, htmlAttributes: new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @Html.DisplayFor(model => model.AgencyCode, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:15px">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CompanyName, htmlAttributes: new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @Html.DisplayFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:15px">
                    <div class="col-sm-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "col-sm-3" })
                            <div class="col-sm-12">
                                @Html.TextAreaFor(model => model.Address, htmlAttributes: new { @class = "form-control", @rows = "4", @readonly = "readonly" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:15px">
                    <div class="form-group">
                        <h3 style="text-align:center">Company Contact Details</h3>
                    </div>
                </div>
                <div class="row" style="margin-bottom:15px">
                    <div class="col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Telephone, htmlAttributes: new { @class = "control-label col-sm-2" })
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ContactPerson, htmlAttributes: new { @class = "control-label col-sm-2" })
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.ContactPerson, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:15px">
                    <div class="col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Fax, htmlAttributes: new { @class = "control-label col-sm-2" })
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.Fax, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Mobile, htmlAttributes: new { @class = "control-label col-sm-2" })
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:15px">
                    <div class="col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-sm-2" })
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Landline, htmlAttributes: new { @class = "control-label col-sm-2" })
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.Landline, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:15px">
                    <div class="col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.DisplayFor(model => model.IsActive)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row" style="margin-bottom:15px">
        <div class="col-md-6">
            <div class="form-group">
                <div class="col-md-3">
                    <input type="submit" value="Delete" class="form-control btn btn-info" />
                </div>
                <div class="col-md-3">
                    @Html.ActionLink("Back to List", "ManageTravelAgency", null, new { @class = "form-control btn btn-info" })
                </div>
            </div>
        </div>
    </div>
}


